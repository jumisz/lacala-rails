!!!
%html
  %head
    %meta{:name => "viewport", :content => "width=device-width, maximum-scale=1.0, initial-scale=1.0"}
    = csrf_meta_tags
    %title La Cala Catering  - Admin
    = stylesheet_link_tag    'mercury'
    %script{:src => "//code.jquery.com/jquery-1.7.2.min.js"}
    = javascript_include_tag  'mercury'
  %body
    :javascript
      // Set to the url that you want to save any given page to, leave null for default handling.
      var saveUrl = null;

      // Instantiate the PageEditor
      new Mercury.PageEditor(saveUrl, {
        saveStyle:  null, // 'form', or 'json' (default json)
        saveMethod: null, // 'PUT', or 'POST', (create, vs. update -- default PUT)
        visible:    true  // boolean - if the interface should start visible or not
      });

      // Change the Navigation URLs for easy editing
      $(function() {
        $('#mercury_iframe').load(function() {
          console.log('Mercury iframe loaded');
          $('#menu a',$('#mercury_iframe').contents()).each(function() {
            var href =  this.attributes['href'].nodeValue;
            this.href = '/editor'+href;
          });
          
        });
      });
